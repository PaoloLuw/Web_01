<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteSongsActivity"
    android:background="@color/principalBackground"
    >

    <TextView
        android:id="@+id/favorite_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Songs"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"
        tools:ignore="HardcodedText"
        android:fontFamily="@font/josefin_slab"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_songs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_songs_title"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

</RelativeLayout>
